<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2C252D"
    android:orientation="vertical"
    tools:context=".Order">


    -


    -

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginTop="20dp"
            android:text="Orders"
            android:textAlignment="center"
            android:textColor="#fdd306"
            android:textSize="30sp" />

        <Spinner
            android:id="@+id/spinnerseat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="15dp"
            android:background="#FF99CC00"
            android:popupBackground="#FF99CC00" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="-35dp"
            android:text="select seat number"
            android:textColor="#fdd306" />

        <ListView
            android:id="@+id/Orders"
            android:layout_width="match_parent"
            android:layout_height="388dp"
            android:layout_marginTop="20dp"
            android:paddingLeft="30dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView11"
            android:layout_width="44dp"
            android:layout_height="68dp"
            android:layout_weight="1"
            android:text="TOTAL"
            android:textAlignment="center"
            android:textColor="#fdd306"
            android:textSize="36sp" />

        <TextView
            android:id="@+id/total"
            android:layout_width="wrap_content"
            android:layout_height="68dp"
            android:layout_marginTop="-10dp"
            android:layout_weight="1"
            android:text="aaaa"
            android:textAlignment="center"
            android:textColor="#fdd306"
            android:textSize="30sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/confirm"
            android:layout_width="60dp"
            android:layout_height="75dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/button_edit_color"
            android:text="confirm" />

        <Button
            android:id="@+id/update"
            android:layout_width="60dp"
            android:layout_height="75dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/button_edit_color"
            android:text="Update" />

        <Button
            android:id="@+id/cancel2"
            android:layout_width="60dp"
            android:layout_height="75dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/button_edit_color"
            android:text="cancel" />

    </LinearLayout>


    -

</LinearLayout>