<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_login"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/EmailSignin"
        android:layout_width="0dp"
        android:layout_height="50dp"

        android:layout_marginStart="30dp"
        android:layout_marginTop="94dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="91dp"
        android:background="@drawable/custom"
        android:drawableLeft="@drawable/email"
        android:drawablePadding="10dp"
        android:duplicateParentState="false"
        android:ems="10"
        android:hint="Email"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        android:paddingRight="5dp"
        android:textColor="#fdd306"
        android:textColorHint="#fdd306"
        android:textColorLink="#00FFFFFF"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/passwordSignin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <EditText
        android:id="@+id/passwordSignin"
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/custom"
        android:drawableLeft="@drawable/password"
        android:drawablePadding="10dp"
        android:duplicateParentState="false"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:paddingLeft="10dp"
        android:textColor="#fdd306"
        android:textColorHint="#fdd306"
        android:textColorLink="#00FFFFFF"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/showpass"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/showpass" />

    <Button
        android:id="@+id/startslogin"
        android:layout_width="181dp"
        android:layout_height="61dp"

        android:layout_marginTop="23dp"
        android:layout_marginBottom="34dp"
        android:background="@drawable/custom"
        android:text="LogIn"
        android:textColor="#fdd306"
        android:textColorLink="#00FFFFFF"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/progressBar2" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="41dp"
        android:layout_marginBottom="8dp"
        android:text="Don't have an account?"
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/startsignup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginBottom="8dp"
        android:text="SignUp"
        android:textColor="#fdd306"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.173"
        app:layout_constraintStart_toEndOf="@+id/textView" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="34dp"
        android:text="Forget your password?"
        android:textColor="#5D1300"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintStart_toStartOf="@+id/startslogin" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_main" />

    <ProgressBar
        android:id="@+id/progressBar2"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="167dp"
        android:layout_marginTop="117dp"
        android:layout_marginEnd="166dp"
        android:layout_marginBottom="118dp"
        android:indeterminateTint="@color/text"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="@+id/passwordSignin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passwordSignin" />

    <ImageView
        android:id="@+id/showpass"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="351dp"
        android:layout_marginEnd="11dp"
        app:layout_constraintEnd_toEndOf="@+id/passwordSignin"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/showpass" />


</androidx.constraintlayout.widget.ConstraintLayout>