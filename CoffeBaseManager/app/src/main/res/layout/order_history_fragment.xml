<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout tools:context=".OrderHistory" android:background="#2c252d" android:layout_height="match_parent" android:layout_width="match_parent" xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout android:layout_height="match_parent" android:layout_width="match_parent" android:orientation="vertical">

    <TextView android:layout_height="wrap_content" android:layout_width="match_parent" android:textSize="36sp" android:textColor="#fdd306" android:textAlignment="center" android:text="Order History" android:layout_marginTop="20dp" android:id="@+id/textView18"/>

        <TextView
            android:id="@+id/textView19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:text="Select Date" />

        <Spinner
            android:id="@+id/spinnerdate"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="-40dp" />

    <ListView android:layout_height="668dp" android:layout_width="match_parent" android:layout_marginTop="40dp" android:id="@+id/listview"/>

</LinearLayout>

</RelativeLayout>


