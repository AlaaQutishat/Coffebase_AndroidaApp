<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout tools:context=".Allhistory" android:background="#2c252d" android:layout_height="match_parent" android:layout_width="match_parent" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout android:layout_height="match_parent" android:layout_width="match_parent" android:orientation="vertical">

    <TextView android:layout_height="wrap_content" android:layout_width="match_parent" android:textSize="36sp" android:textColor="#fdd306" android:textAlignment="center" android:text="All Order" android:layout_marginTop="20dp" android:id="@+id/textView32"/>

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:textSize="18sp" android:textColor="#fdd306" android:text="enter time" android:layout_marginTop="20dp" android:id="@+id/textView33" android:layout_marginLeft="20dp"/>

    <TextView android:layout_height="wrap_content" android:layout_width="135dp" android:textSize="18sp" android:textColor="#fdd306" android:text="time" android:layout_marginTop="-25dp" android:id="@+id/time" android:layout_marginLeft="180dp"/>

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:textSize="18sp" android:textColor="#fdd306" android:text="leave time" android:layout_marginTop="20dp" android:id="@+id/textView35" android:layout_marginLeft="20dp"/>

        <TextView
            android:id="@+id/leavetime"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="180dp"
            android:layout_marginTop="-30dp"
            android:text="time"
            android:textColor="#fdd306"
            android:textSize="18sp" />

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:textSize="18sp" android:textColor="#fdd306" android:text="seat id" android:layout_marginTop="20dp" android:id="@+id/textView37" android:layout_marginLeft="20dp"/>

        <TextView
            android:id="@+id/seatid"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="180dp"
            android:layout_marginTop="-30dp"
            android:text="seatid"
            android:textColor="#fdd306"
            android:textSize="18sp" />

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:textSize="18sp" android:textColor="#fdd306" android:text="total" android:layout_marginTop="20dp" android:id="@+id/textView39" android:layout_marginLeft="20dp"/>

        <TextView
            android:id="@+id/total"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="180dp"
            android:layout_marginTop="-30dp"
            android:text="total"
            android:textColor="#fdd306"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="390dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView28"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Order Name"
                android:textColor="#fdd306"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView30"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Price"
                android:textColor="#fdd306"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView31"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Count"
                android:textColor="#fdd306"
                android:textSize="14sp" />
        </LinearLayout>
    <ListView android:layout_height="wrap_content" android:layout_width="match_parent" android:layout_marginTop="10dp" android:id="@+id/orderlist" android:paddingLeft="20dp"/>

</LinearLayout>

</RelativeLayout>